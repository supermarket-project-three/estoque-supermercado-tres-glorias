    <script>
        const radioSetor = document.getElementById("btSetor");
        const radioAdmin = document.getElementById("btAdmin");
        const setores = document.getElementById("inSetores");
        const setorSelect = document.getElementById("inSetor");

        function toggleSetorField() {
            if (radioSetor.checked) {
                setores.className = "open";
                setorSelect.required = true;
            } else {
                setores.className = "close";
                setorSelect.required = false;
                // Não limpamos o valor, pois pode estar pré-selecionado
            }
        }

        radioSetor.addEventListener("change", toggleSetorField);
        radioAdmin.addEventListener("change", toggleSetorField);
        
        // Executa a função assim que a página carrega
        toggleSetorField();
    </script>
